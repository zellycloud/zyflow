{
  "name": "zyflow",
  "version": "0.5.0",
  "description": "ZyFlow - OpenSpec task management and workflow automation",
  "author": "Hansoo",
  "mcpServers": {
    "zyflow": {
      "type": "stdio",
      "command": "node",
      "args": ["${PLUGIN_DIR}/scripts/mcp-server.cjs"],
      "env": {
        "ZYFLOW_PROJECT": "${PROJECT_ROOT}"
      }
    }
  },
  "agents": [
    "agents/coder.md",
    "agents/planner.md",
    "agents/researcher.md",
    "agents/reviewer.md",
    "agents/tester.md"
  ],
  "skills": [
    "skills/openspec/SKILL.md"
  ]
}

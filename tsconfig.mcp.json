{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2023"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "noImplicitAny": false
  },
  "include": ["mcp-server/**/*.ts", "server/tasks/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
